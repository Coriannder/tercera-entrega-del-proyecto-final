<div class="container mt-4 mb-4" style="width: 500px;">
    <h2>Carrito</h2>
    <table id="table" class="table table-success table-striped">
        <thead class="table-dark">
            <tr>
                <th scope="col-5">Producto</th>
                <th scope="col-5">Precio</th>
                <th scope="col-2">Cantidad</th>
            </tr>
        </thead>
        <tbody id="tbody">
            <% productos.forEach(producto => { %>
                <tr>
                    <th scope="col-5"><%= producto.title %></th>
                    <th scope="col-5">$<%= producto.price %></th>
                    <th scope="col-2"><img src="<%= producto.thumbnail %>" alt="imagen de <%= producto.title %> " style="height: 30px;"></th>
                </tr>
            <% }) %>
            
        </tbody>
    </table>
    <br>
</div>